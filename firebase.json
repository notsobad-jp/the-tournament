{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "index.js",
      "package.json"
    ],
    "rewrites": [
      {
        "source": "/tournaments/*",
        "function": "renderWithOGP"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [{
      "source": "**/*.tag",
      "headers": [{
        "key": "Content-Type",
        "value": "text/javascript; charset=UTF-8"
      }]
    }]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "public"
  }
}
